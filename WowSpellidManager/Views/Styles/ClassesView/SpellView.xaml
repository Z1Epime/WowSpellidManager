<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WowSpellidManager.Views.Styles.ClassesView">

    <Style x:Name="GeneralInfoStackPanel"
           TargetType="StackPanel">
        <Setter Property="RelativePanel.Below" Value="TitleTextBlock"></Setter>
        <Setter Property="RelativePanel.AlignHorizontalCenterWith" Value="TitleTextBlock"></Setter>
        <Setter Property="RelativePanel.AlignVerticalCenterWithPanel" Value="True"></Setter>
    </Style>
    
</ResourceDictionary>
